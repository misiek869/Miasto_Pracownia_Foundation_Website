generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  color       String
  signUpUrl   String
  eventDate   String
  description String
  eventHour   String
}
